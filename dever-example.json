{
  "version": 1,
  "name": "example-component",
  "keywords": [
    "example",
    "example-component",
    "ex"
  ],
  "segments": [
    {
      "key": "env",
      "name": "Environment",
      "description": "Environment variables",
      "properties": {
        "elevated": true,
        "name_required": true
      },
      "actions": [
        {
          "name": "ps-up-and-down-scripts",
          "optional": true,
          "up": {
            "type": "powershell-script",
            "file": "/development/migrate-up.ps1",
            "wait": {
              "when": "before",
              "time": 5000
            },
            "options":
            [
              {
                "required": true,
                "key": "value",
                "alias": "v",
                "describe": "test",
                "param": "--test $0",
                "default": 5
              }
            ]
          },
          "down": {
            "type": "powershell-script",
            "file": "/development/migrate-down.ps1",
            "wait": {
              "when": "after",
              "time": 5000
            }
          }
        },
        {
          "name": "winget-install-example",
          "type": "winget",
          "package": "Microsoft.SQLServerManagementStudio"
        },
        {
          "name": "ps-command",
          "type": "powershell-command",
          "command": "print Hello World",
          "options": [
            {
              "required": true,
              "key": "ps",
              "alias": "ps1",
              "describe": "test",
              "param": "-n $0",
              "default": 10
            }
          ]
        },
        {
          "name": "docker-supported-docker-start",
          "group": "docker",
          "up": {
            "type": "docker-container",
            "container": {
              "name": "mssql",
              "ports": [
                "1433:1433"
              ],
              "variables": [
                "ACCEPT_EULA=Y",
                "SA_PASSWORD=123456789Qwerty"
              ],
              "image": "mcr.microsoft.com/mssql/server:2019-latest"
            },
            "wait": {
              "when": "after",
              "time": 3000
            }
          }
        },
        {
          "name": "create-database",
          "group": ["docker", "database"],
          "up": {
            "type": "mssql",
            "sql": {
              "username": "sa",
              "password": "123456789Qwerty",
              "option": "create-database",
              "database": "test"
            }
          }
        },
        {
          "name": "create-table",
          "optional": true,
          "up": {
            "type": "mssql",
            "sql": {
              "username": "sa",
              "password": "123456789Qwerty",
              "option": "insert",
              "database": "test",
              "table": "test",
              "columns": [
                {
                  "key": "name",
                  "valueType": "varchar(255)",
                  "value": "testing?"
                },
                {
                  "key": "Id",
                  "valueType": "int",
                  "value": 55
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
